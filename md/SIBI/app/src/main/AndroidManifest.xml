<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sidiq.sibi">

    <uses-feature android:name="android.hardware.camera.any" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".SibiApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SIBI">
        <activity android:name=".ui.contribute.ContributeCameraActivity"></activity>
        <activity android:name="com.sidiq.sibi.ui.maingame.game.GameCameraActivity" />
        <activity android:name="com.sidiq.sibi.ui.maingame.practice.PracticeCameraActivity" />
        <activity android:name=".ui.start.StartActivity" />
        <activity android:name=".ui.splashscreen.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.MainActivity" />
        <activity android:name=".ui.learning.LearningActivity" />
        <activity android:name=".ui.learning.LearningDetailActivity" />
        <activity android:name="com.sidiq.sibi.ui.maingame.game.GameActivity" />
        <activity android:name="com.sidiq.sibi.ui.maingame.practice.PracticeActivity" />
    </application>

</manifest>